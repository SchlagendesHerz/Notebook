    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:gravity="end|center">

        <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/tv_time_date_text_color"
                android:ellipsize="end"
                android:minLines="1"
                android:maxLines="1"
                android:text="Oct 15, 2022" />

        <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/tv_time_date_text_color"
                android:ellipsize="end"
                android:minLines="1"
                android:maxLines="1"
                android:text="11:17 AM" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/category_text_color"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:ellipsize="end"
                    android:minLines="1"
                    android:maxLines="1"
                    android:text="@string/tv_ago_prefix" />

            <TextView
                    android:id="@+id/tv_ago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/tv_time_date_text_color"
                    android:gravity="start"
                    android:ellipsize="end"
                    android:minLines="1"
                    android:maxLines="1"
                    android:text="12y; 7m; 0d ago" />
        </LinearLayout>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/category_text_color"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:ellipsize="end"
                    android:minLines="1"
                    android:maxLines="1"
                    android:text="@string/tv_prev_rec_ago_prefix" />

            <TextView
                    android:id="@+id/tv_prev_rec_ago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/tv_time_date_text_color"
                    android:gravity="start"
                    android:ellipsize="end"
                    android:minLines="1"
                    android:maxLines="1"
                    android:text="12y; 7m; 0d ago" />
        </LinearLayout>


    </LinearLayout>


