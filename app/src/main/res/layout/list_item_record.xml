<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >

    <TextView
            android:id="@+id/tv_ordinal"
            android:layout_width="0dp"
            android:layout_height="@dimen/list_item_height"
            android:maxHeight="@dimen/list_item_height"
            android:layout_weight="1"
            android:textColor="@color/category_text_color"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:gravity="start|center"
            android:layout_marginEnd="@dimen/list_item_side_margin"
            android:text="99."
            />

    <TextView
            android:id="@+id/tv_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="@color/time_date_text_color"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:minLines="1"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="center|start"
            android:layout_marginEnd="@dimen/list_item_side_margin"
            />

    <TextView
            android:id="@+id/tv_desc"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:textColor="@color/category_text_color"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center|start"
            android:ellipsize="end"
            android:layout_marginEnd="@dimen/list_item_side_margin"
            android:minLines="1"
            android:maxLines="3"
            />


